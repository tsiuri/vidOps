# clips.env â€” shared defaults for the clip pipeline

# Where clip outputs go
export CLIPS_OUT="${CLIPS_OUT:-clips}"

# yt-dlp pacing (safe-ish defaults)
export YT_SLEEP_REQUESTS="${YT_SLEEP_REQUESTS:-2}"
export YT_SLEEP_INTERVAL="${YT_SLEEP_INTERVAL:-1}"
export YT_MAX_SLEEP_INTERVAL="${YT_MAX_SLEEP_INTERVAL:-5}"
export YT_RETRIES="${YT_RETRIES:-15}"
export YT_FRAG_RETRIES="${YT_FRAG_RETRIES:-20}"
export YT_EXTRACTOR_RETRIES="${YT_EXTRACTOR_RETRIES:-10}"

# Local cutting (ffmpeg) defaults
export CLIP_AUDIO_BR="${CLIP_AUDIO_BR:-96k}"   # libopus bitrate when re-encoding audio clips
export CLIP_CONTAINER="${CLIP_CONTAINER:-opus}" # opus|mp3|mka|mp4 (mp4 will try to add video if present)
export PAD_START="${PAD_START:-0}"            # seconds pad before start
export PAD_END="${PAD_END:-0}"                # seconds pad after end

# File naming
export NAME_MAX_TITLE=70
